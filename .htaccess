# .htaccess (web root)

# Enable rewriting
RewriteEngine On
RewriteBase /

# 1) Pretty URL for the proxy
#    /validate  or /validate/  ->  /validate.php
RewriteRule ^validate/?$ validate.php [L,QSA]

# 2) Serve existing files/directories as-is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

